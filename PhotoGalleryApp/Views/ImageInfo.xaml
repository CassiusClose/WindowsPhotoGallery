<UserControl x:Class="PhotoGalleryApp.Views.ImageInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoGalleryApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <Label>Title</Label>
        <Label>Path:</Label>
        <Label Content="{Binding Path}"/>
        <Label>Tags:</Label>
        <ListBox ItemsSource="{Binding TagsView, Mode=OneWay}"/>

        <TextBox MaxLines="1" AcceptsReturn="False" AcceptsTab="False" Text="{Binding NewTagInput}"/>
        <Button Command="{Binding AddTagCommand}">Add Tag</Button>
    </StackPanel>
</UserControl>
