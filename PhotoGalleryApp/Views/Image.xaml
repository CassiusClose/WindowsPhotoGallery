<UserControl x:Class="PhotoGalleryApp.Views.Image"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoGalleryApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <!-- Left Button -->
        <Button Grid.Column="0" Command="{Binding LeftCommand}" HorizontalAlignment="Left">Left</Button>
        
        <!-- Image display -->
        <Image Grid.Column="1" RenderOptions.BitmapScalingMode="HighQuality"
            Source="{Binding Path, Mode=OneWay, IsAsync=True}"
            Stretch="Uniform" StretchDirection="DownOnly"/>
        
        <!-- Right Button -->
        <Button Grid.Column="2" Command="{Binding RightCommand}" HorizontalAlignment="Right">Right</Button>
    </Grid>
</UserControl>
