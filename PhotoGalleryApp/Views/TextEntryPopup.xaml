<UserControl x:Class="PhotoGalleryApp.Views.TextEntryPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoGalleryApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel FocusManager.FocusedElement="{Binding ElementName=TextInput}">
        <TextBox
            x:Name="TextInput"
            Text="{Binding Text}"
            />
        <Button
            Content="Create"
            Command="{Binding ConfirmTextCommand}"
            IsDefault="True"
            />
    </StackPanel>
</UserControl>
